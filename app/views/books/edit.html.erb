<h1>Editing Book</h1>
<%= flash[:success] %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit '保存' %>
<% end %>
<div>
<%= link_to 'show', book_path(@book.id) %>|
<%= link_to 'back', books_path %>
</div>
