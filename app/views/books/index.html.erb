<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'show', book_path(book.id) %></td>
        <td><%= link_to 'edit', edit_book_path(book.id) %></td>
        <td><%= link_to "delete", book_path(book), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h2>NEW BOOK</h2>
<%= form_with model:@book, local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'create Book' %>
<% end %>